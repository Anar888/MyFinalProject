@model AdminLoginViewModel
@{
    Layout = "";
}
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>AdminPanel Log In</title>
    <link href="~/manage/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">

</head>
<section class="vh-100">
    <div class="container py-5 h-100">
        <center style="font-size:40px">Login</center>
        <div class="row d-flex align-items-center justify-content-center h-100">
         

            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form asp-action="login" method="post">
                    <!-- Username input -->
                    <div class="form-outline mb-4">
                        <input asp-for="UserName" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="UserName">Username</label>
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Password" class="form-control form-control-lg" />
                        <label class="form-label" asp-for="Password">Password</label>
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="d-flex justify-content-around align-items-center mb-4">
                        <!-- Checkbox -->
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   value=""
                                   asp-for="IsPersistent" />
                            <label class="form-check-label" asp-for="IsPersistent"> Remember me </label>
                        </div>
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Sign in</button>



                </form>
            </div>
        </div>
    </div>
</section>