@model FoundersInfoSlider
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1>Edit</h1>
            <form asp-action="edit" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Enter Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio">Bio</label>
                    <input class="form-control" asp-for="Bio" placeholder="Enter Bio">
                    <span class="text-danger" asp-validation-for="Bio"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Position">Position</label>
                    <input class="form-control" asp-for="Position" placeholder="Enter Position">
                    <span class="text-danger" asp-validation-for="Position"></span>
                </div>


                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Select image">
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                    @if (Model.Image != null)
                    {
                        <div class="img-box" style="position:relative;display:inline-block">
                            <i class="fas fa-times remove-img-box" style="position: absolute;right: -5px;top: -8px; color: red; cursor: pointer;"></i>
                            <input type="hidden" name="BackImage" value="@Model.Image" />
                            <img width="250" src="~/uploads/foundersinfosliders/@Model.Image" />
                        </div>
                    }
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
    $(document).ready(function () {
        $(document).on("click", ".remove-img-box", function () {
            $(this).parent().remove()
        })
    })
    </script>
}