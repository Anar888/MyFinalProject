@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> usermanager;
@{ AppUser member = null;

    if (User.Identity.IsAuthenticated)
        member = usermanager.Users.FirstOrDefault(x => x.UserName == User.Identity.Name && x.IsAdmin);


                }


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>MILANOADMIN</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">
    <link href="~/manage/assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="~/manage/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/manage/assets/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/manage/assets/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/manage/assets/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/manage/assets/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>MilanoAdmin</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        @if (member != null)
                        {
                        <h6 class="mb-0">@member.FullName</h6>
                            <span>@member.UserName</span>
                         }

                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a asp-action="index" asp-controller="dashboard" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a  class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Models</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="product" asp-action="index" class="dropdown-item">Product</a>
                            <a asp-controller="slider" asp-action="index" class="dropdown-item">Slider</a>
                            <a asp-controller="banner" asp-action="index" class="dropdown-item">Banner</a>
                            <a asp-controller="blog" asp-action="index" class="dropdown-item">Blog</a>
                            <a asp-controller="brand" asp-action="index" class="dropdown-item">Brand</a>
                            <a asp-controller="brandlogo" asp-action="index" class="dropdown-item">BrandLogo</a>
                            <a asp-controller="category" asp-action="index" class="dropdown-item">Category</a>
                            <a asp-controller="color" asp-action="index" class="dropdown-item">Color</a>
                            <a asp-controller="order" asp-action="index" class="dropdown-item">Order</a>
                            <a asp-controller="size" asp-action="index" class="dropdown-item">Size</a>
                            <a asp-controller="faqs" asp-action="index" class="dropdown-item">Faqs</a>
                            <a asp-controller="contactmessage" asp-action="index" class="dropdown-item">ContactMessage</a>
                            <a asp-controller="about" asp-action="index" class="dropdown-item">About</a>
                            <a asp-controller="foundersinfoslider" asp-action="index" class="dropdown-item">FoundersInfoSlider</a>
                            <a asp-controller="setting" asp-action="index" class="dropdown-item">Setting</a>
                            <a asp-controller="shipping" asp-action="index" class="dropdown-item">Shipping</a>

                        </div>
                    </div>
                    @if (User.IsInRole("Superadmin"))
                    {
                        <a asp-action="index" asp-controller="admin" class="nav-item nav-link"><i class="fa fa-th me-2"></i>AdminList</a>
                                    }
                 
                  
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
               
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            @if (member != null)
                            {
                            <span class="d-none d-lg-inline-flex">@member.FullName</span>
                            }

                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a asp-action="profile" asp-controller="account" class="dropdown-item">My Profile</a>
                            @if (User.IsInRole("Superadmin"))
                            {
                                <a asp-action="create" asp-controller="admin" class="dropdown-item">Create Admin</a>
                                            }
                            <a asp-action="logout" asp-controller="account" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            @RenderBody()
            <!-- Footer Start -->
            
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/manage/assets/lib/chart/chart.min.js"></script>
    <script src="~/manage/assets/lib/easing/easing.min.js"></script>
    <script src="~/manage/assets/lib/waypoints/waypoints.min.js"></script>
    <script src="~/manage/assets/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/manage/assets/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/manage/assets/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/manage/assets/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/manage/assets/js/main.js"></script>
    @RenderSection("Scripts", required: false);
</body>

</html>