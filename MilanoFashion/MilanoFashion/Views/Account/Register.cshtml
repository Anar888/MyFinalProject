@model MemberRegisterViewModel

<main>


    <div class="login-page">
        <div style="text-align: center;" class="title-loginregister mb-5">
            <h3>Register</h3>
        </div>
        <div class="form">

            <form class="login-form" asp-action="register" method="post">
                <input asp-for="UserName" placeholder="Enter your User Name" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
                <input asp-for="FullName" placeholder="Enter your Full Name" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
                <input asp-for="Email" placeholder="Enter your Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Password" placeholder="Enter your Password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <input asp-for="ConfirmPassword" placeholder="Repeat your Password" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <button type="submit" class="btn">Register</button>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            </form>
        </div>
    </div>

</main>