@model Blog
<div style="padding: 20px;" class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Home</a></li>
                            <li class="breadcrumb-item"><a asp-action="index" asp-controller="blog">Blog</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Blog Detail</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog-main-wrapper section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-12 order-1">
                <div class="row">
                    <div class="col-lg-12">
                        <!-- blog single item start -->
                        <div class="blog-post-item">
                            <div class="blog-thumb">
                                <img src="~/uploads/blogs/@Model.ImageUrl" alt="blog thumb">
                            </div>
                            <div class="blog-content blog-details">
                                <h5 class="blog-title">
                                    @Model.Title
                                </h5>

                                <p>
                                   @Model.Desc
                                </p>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>