@using MilanoFashion.Services
@model ContactMessage
@inject LayoutService layoutService
@{ var settings = layoutService.GetSettings();
    
}



<main>
    <!-- breadcrumb area start -->
    <div style="padding: 20px;" class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a style="color: rgb(241 48 48);" asp-action="index" asp-controller="home">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Contact</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <div class="contactmap" style="padding-top: 50px;">
        <div class="map-wrapper">
            <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d24305.76232914585!2d49.86419514999999!3d40.4039704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2s!4v1639816553167!5m2!1sen!2s" width="100%" height="500" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
    </div>


    <div class="contact-input">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="contact-header mb-5 mt-5">
                        <h4>LEAVE A MEASSAGE!</h4>
                    </div>
                    <form id="contactform" asp-action="contact" method="post" >
                        <div class="row">
                            <div class="col-lg-4 ">

                                <input asp-for="Name" placeholder="Your Name" class="contactinput" type="text">
                                <span class="text-danger" asp-validation-for="Name"></span>
                                <input asp-for="Email" placeholder="Your Email" class="contactinput" type="text">
                                <span class="text-danger" asp-validation-for="Email"></span>

                                <input asp-for="Phone" placeholder="Your Phone" class="contactinput" type="text">
                                <span class="text-danger" asp-validation-for="Phone"></span>


                                <button type="submit" class="contactbtn">Submit</button>
                            </div>
                            <div class="col-lg-8">
                                <textarea class="contacttextarea" asp-for="Message" placeholder="Message" cols="30" rows="7"></textarea>
                                <span class="text-danger" asp-validation-for="Message"></span>

                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        </div>




                    </form>
                </div>
                <div class="col-lg-4">
                    <div class="contact-header mb-5 mt-5">
                        <h4>
                            MILANO FASHION.
                        </h4>
                    </div>
                    <ul class="adresbar">
                        <li><span>Adress:</span>@settings["addres"]</li>
                        <li>
                            <span>
                                MOBILE:
                            </span>@settings["tel"]
                        </li>
                        <li>
                            <span>
                                E - MAIL:
                            </span>@settings["mail"]
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>


</main>
