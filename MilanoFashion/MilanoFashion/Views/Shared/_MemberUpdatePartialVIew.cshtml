@model MemberUpdateViewModel
    <h3 class="accheader">Account Details</h3>
    <form asp-action="edit" method="post">
        <div class="row">
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="FullName" class="required">Fullname</label>
                    <input asp-for="FullName" type="text" id="display-name" placeholder="Fullname" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="single-input-item">
                    <label asp-for="UserName" class="required">Username</label>
                    <input asp-for="UserName" type="text" id="display-name" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="single-input-item">
            <label asp-for="Email" class="required">Email Addres</label>
            <input asp-for="Email" type="email" id="email" placeholder="Email Address" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="single-input-item">
            <label asp-for="Phone" class="required">Phone Number</label>
            <input asp-for="Phone" id="email" placeholder="Phone Number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="single-input-item">
            <label asp-for="Country" class="required">Country</label>
            <input asp-for="Country" id="email" placeholder="Country" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="single-input-item">
            <label asp-for="City" class="required">City</label>
            <input asp-for="City" id="email" placeholder="City" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="single-input-item">
            <label asp-for="Address" class="required">Address</label>
            <input asp-for="Address" id="email" placeholder="Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <fieldset>
            <legend>Password change</legend>
            <div class="single-input-item">
                <label asp-for="CurrentPassword" class="required">Current Password</label>
                <input asp-for="CurrentPassword" type="password" id="current-pwd" placeholder="Current Password" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="Password" class="required">New Password</label>
                        <input asp-for="Password" type="password" id="new-pwd" placeholder="New Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="single-input-item">
                        <label asp-for="ConfirmPassword" required">Confirm Password</label>
                        <input asp-for="ConfirmPassword" type="password" id="confirm-pwd" placeholder="Confirm Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>

        </fieldset>
        <div class="single-input-item">
            <button type="submit" class="check-btn sqr-btn ">Save Changes</button>
        </div>
    </form>