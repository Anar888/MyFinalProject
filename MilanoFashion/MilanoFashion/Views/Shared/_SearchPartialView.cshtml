@model IEnumerable<Product>

@foreach (var product in Model)
{
<a class="dropdown-item"
   asp-controller="Shop" asp-action="Detail" asp-route-id="@product.Id">
    <div class="row">
        <div class="col-2 item-thumbnail" style="min-width:67px;">
            <img src="~/uploads/products/@product.ProductImages.ElementAt(0).Image" alt="image" style="width:35px; height:35px" class="profile-pic">
        </div>
        <div class="col-2 item-content flex-grow" style="min-width:120px">
            <h6 class="ellipsis font-weight-normal" style="padding-top:15px;">
                @product.Name
            </h6>
        </div>
      
    </div>

</a>}
